<?xml version="1.0"?><h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:jr="http://openrosa.org/javarosa" xmlns:orx="http://openrosa.org/xforms" xmlns:odk="http://www.opendatakit.org/xforms"><h:head><h:title>Date Time Calculation</h:title><model odk:xforms-version="1.0.0"><instance><data id="odk.date_time_calc.v1"><start/><date_time_ob/><age_inhours/><age/><age_display/><age_date/><age_date_display/><meta><instanceID/></meta></data></instance><bind nodeset="/data/start" jr:preload="timestamp" type="dateTime" jr:preloadParams="start"/><bind nodeset="/data/date_time_ob" type="dateTime" constraint=".&lt; /data/start " jr:constraintMsg="Date and Time of birth can not be in the future." required="true()"/><bind nodeset="/data/age_inhours" type="string" calculate="(decimal-date-time( /data/start ) - decimal-date-time( /data/date_time_ob ))*24" required="true()"/><bind nodeset="/data/age" type="string" calculate="decimal-date-time( /data/start ) - decimal-date-time( /data/date_time_ob )" required="true()"/><bind nodeset="/data/age_display" readonly="true()" type="string"/><bind nodeset="/data/age_date" type="string" calculate="format-date-time( /data/date_time_ob , '%e/%n/%Y')"/><bind nodeset="/data/age_date_display" readonly="true()" type="string"/><bind nodeset="/data/meta/instanceID" type="string" readonly="true()" jr:preload="uid"/></model></h:head><h:body><input ref="/data/date_time_ob"><label>Date and Time of birth (If unknown, approximate based on time of day remembered)</label></input><input ref="/data/age_display"><label> Testing this out: Age in hours: <output value=" /data/age_inhours "/> hours and age in days: <output value=" /data/age "/> </label></input><input ref="/data/age_date_display"><label> The date of birth of the baby is: <output value=" /data/age_date "/>. </label></input></h:body></h:html>